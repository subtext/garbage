<!DOCTYPE html>
<html>
    <head>
        <title>My App</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="css/default.css">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="text-center">{{ pageTitle | trans }}</h1>
                    <h3 class="text-center">{{ 'personal.hello-my-name' | trans(['Alonzo']) }}</h3>
                    <h4 class="text-center">{{ 'personal.apples' | transchoice(2) }}</h4>
                    <p class="text-center">{{ 'headline.secondary' | trans }}</p>
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a href="#red-pill" id="red-tab" class="nav-link" data-toggle="pill" role="tab">{{ colors.red | trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a href="#blue-pill" id="blue-tab" class="nav-link active" data-toggle="pill" role="tab">{{ colors.blue | trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a href="#green-pill" id="green-tab" class="nav-link" data-toggle="pill" role="tab">{{ colors.green | trans }}</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade" id="red-pill" role="tabpanel">
                            {{ 'book.lord-of-flies' | trans }}
                        </div>
                        <div class="tab-pane fade show active" id="blue-pill" role="tabpanel">
                            {{ 'book.animal-farm' | trans }}
                        </div>
                        <div class="tab-pane fade" id="green-pill" role="tabpanel">
                            {{ 'book.handmaids-tale' | trans }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    </body>
</html>
